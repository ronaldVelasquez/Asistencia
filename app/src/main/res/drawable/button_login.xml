<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true" >
        <shape>
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="@color/blue_dark"
                />
            <size
                android:width="200dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="@color/blue_dark"
                />
        </shape>

    </item>

    <item
        android:state_enabled="true">
        <shape>
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="@color/blue_primary"
                />
            <size
                android:width="200dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="@color/white"
                />
        </shape>

    </item>

</selector>
