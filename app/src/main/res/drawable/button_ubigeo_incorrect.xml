<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true">
        <shape>
            <corners
                android:radius="10dp"/>
            <size
                android:height="60dp"
                android:width="200dp"/>
            <solid
                android:color="@color/red_primary"/>
            <stroke
                android:width="3dp"
                android:color="@color/white"/>

        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape>
            <corners
                android:radius="10dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/red_dark"/>
            <solid android:color="@color/red_dark"/>
            <size
                android:height="60dp"
                android:width="200dp"/>
        </shape>
    </item>

</selector>